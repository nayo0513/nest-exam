generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?
  reviews    reviews[]
}

model books {
  id           Int       @id @default(autoincrement())
  title        String
  author       String
  description  String?
  published_at DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  deleted_at   DateTime?
  reviews      reviews[]
}

model reviews {
  id         Int       @id @default(autoincrement())
  user       users     @relation(fields: [user_id], references: [id])
  user_id    Int
  book       books     @relation(fields: [book_id], references: [id])
  book_id    Int
  rating     Int
  comment    String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?
}
